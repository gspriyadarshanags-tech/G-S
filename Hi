<body>

    <audio id="audioPlayer" loop></audio>

    <div class="chat-container">
        <div class="header">
            <div class="header-title">AI Assistant ü§ñ</div>
            <div class="header-controls">
                
                <!-- NEW LINK BUTTON (üåê) -->
                <button class="icon-btn" onclick="openLink()" title="Go to Website">üåê</button>
                
                <!-- Other Buttons -->
                <button class="icon-btn active" onclick="stopSpeaking()" title="Mute">üîá</button>
                <button class="icon-btn" id="musicBtn" onclick="handleMusic()" title="Music">üéµ</button>
                <button class="icon-btn" id="deleteBtn" onclick="toggleDeleteMode()" title="Delete">üóëÔ∏è</button>
            </div>
        </div>
        
        <div class="chat-box" id="chatBox">
            <div class="message ai-msg" onclick="handleMsgClick(this)">
                <b>Namaste! Hello!</b><br>
                1. üåê = Link open karein.<br>
                2. üéµ = Music chalayein.<br>
                3. Main bol kar bhi samjhaunga.
                <span class="speak-btn" onclick="event.stopPropagation(); speakText('Namaste. Globe button se aap link open kar sakte hain.')">üîä</span>
            </div>
        </div>
        
        <div class="loading" id="loadingIndicator">Typing...</div>
        
        <div class="input-area">
            <textarea id="userInput" placeholder="Ask anything..." oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"></textarea>
            <button onclick="sendMessage()" class="send-btn" id="sendBtn">Send</button>
        </div>
    </div>

    <script>
        // --- VARIABLES ---
        const chatBox = document.getElementById('chatBox');
        const userInput = document.getElementById('userInput');
        const sendBtn = document.getElementById('sendBtn');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const audioPlayer = document.getElementById('audioPlayer');
        const deleteBtn = document.getElementById('deleteBtn');
        const musicBtn = document.getElementById('musicBtn');
        let synthesis = window.speechSynthesis;
        let isDeleteMode = false;
        let isMusicPlaying = false;

        // --- 1. NEW LINK FUNCTION (üåê) ---
        function openLink() {
            let link = prompt("Website Link enter karein (e.g. google.com):");
            if (link) {
                // Agar user ne 'https://' nahi lagaya, to hum laga denge
                if (!link.startsWith('http://') && !link.startsWith('https://')) {
                    link = 'https://' + link;
                }
                // Us link par chale jao
                window.location.href = link;
            }
        }

        // --- 2. SPEAKING FUNCTION ---
        function speakText(text) {
            synthesis.cancel();
            const cleanText = text.replace(/<[^>]*>/g, '').replace(/[*#]/g, '');
            const utterance = new SpeechSynthesisUtterance(cleanText);
            
            if (/[‡§Ä-‡•ø]/.test(cleanText)) utterance.lang = 'hi-IN';
            else utterance.lang = 'en-US';

            synthesis.speak(utterance);
        }
        function stopSpeaking() { synthesis.cancel(); }

        // --- 3. MUSIC PLAYER ---
        function handleMusic() {
            if (isMusicPlaying) {
                audioPlayer.pause();
                isMusicPlaying = false;
                musicBtn.classList.remove('music-on');
            } else {
                let link = prompt("Paste MP3 Link:", "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3");
                if (link && link.trim() !== "") {
                    audioPlayer.src = link;
                    audioPlayer.play().then(() => {
                        isMusicPlaying = true;
                        musicBtn.classList.add('music-on');
                    }).catch(e => alert("Error: Link invalid."));
                }
            }
        }

        // --- 4. DELETE FUNCTION ---
        function toggleDeleteMode() {
            isDeleteMode = !isDeleteMode;
            if (isDeleteMode) {
                deleteBtn.classList.add('active');
                alert("Message select karein aur firse Dustbin dabayein.");
            } else {
                const selected = document.querySelectorAll('.selected-to-delete');
                if (selected.length > 0 && confirm("Delete messages?")) {
                    selected.forEach(msg => msg.remove());
                } else {
                    selected.forEach(msg => msg.classList.remove('selected-to-delete'));
                }
                deleteBtn.classList.remove('active');
            }
        }
        function handleMsgClick(element) {
            if (isDeleteMode) element.classList.toggle('selected-to-delete');
        }

        // --- 5. AI LOGIC ---
        async function sendMessage() {
            const question = userInput.value.trim();
            if (!question) return;

            addMessage(question, 'user-msg', false);
            userInput.value = '';
            userInput.style.height = '24px';
            setLoading(true);

            try {
                const systemPrompt = "You are a teacher. Detect language. Reply in SAME language. Explain clearly.";
                const finalUrl = `https://text.pollinations.ai/${encodeURIComponent(systemPrompt + "\n\nUser Question: " + question)}`;

                const response = await fetch(finalUrl);
                const aiReply = await response.text();

                addMessage(aiReply, 'ai-msg', true);
                speakText(aiReply);

            } catch (error) {
                addMessage("Error: Net check karein.", 'ai-msg', false);
            } finally {
                setLoading(false);
            }
        }

        function addMessage(text, className, isAi) {
            const div = document.createElement('div');
            div.className = `message ${className}`;
            let formattedText = text.replace(/\*\*(.*?)\*\*/g, '<b>$1</b>').replace(/\n/g, '<br>');
            
            if (isAi) {
                const safeText = text.replace(/'/g, "\\'").replace(/"/g, '&quot;').replace(/\n/g, ' ');
                formattedText += `<br><span class="speak-btn" onclick="event.stopPropagation(); speakText('${safeText}')">üîä</span>`;
            }

            div.innerHTML = formattedText;
            div.onclick = function() { handleMsgClick(this); };
            chatBox.appendChild(div);
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        function setLoading(isLoading) {
            sendBtn.disabled = isLoading;
            loadingIndicator.style.display = isLoading ? 'block' : 'none';
        }
    </script>
</body>
</html>
